<style type='text/css'>
  .job-parallax {
    background-image: url(<%= @job.img_url %>);
    opacity: 0.6;
    object-fit: cover;
    background-repeat: no-repeat;
    background-position: center;
    background-size: 100%;
    height: auto;
    background-attachment: fixed;
  }
</style>

<div class='jumbotron job-parallax <%= @job.color %>'>
  <h2 class='display4'><%= @job.name %></h2>
  <p class='lead'><%= @job.short_description %></p>
</div>

<div class='container-fluid intro'>
  <div class='row'>
    <% if session[:user_id] %>
      <div class='col portrait center'>
        <%= link_to 'edit', edit_job_path(id: @job) %>
      </div>
      <div class='col portrait center'>
        <%= link_to 'add client', new_job_client_path(@job) %>
      </div>
    <% end %>
  </div>

  <div class='row'>
    <div class='col portrait center'>
      <h4>Here's what you should know:</h4>
      <div class='row'>
        <div class='col-9 mx-auto'>
          <p><%= @job.description %></p><br />
        </div>
      </div>

      <h4>Notable clients:</h4>
      <% @job.clients.each do |client| %>
        <%= client.name %><br />
      <% end %>
    </div>
  </div>
</div>
