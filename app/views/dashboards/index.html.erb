<div class='portrait intro'>
  <center>
    <%= image_tag("boys_porch.jpg", alt: "Jim and the boys.",
                                    size: '150x150',
                                    class: 'img-circle img-fluid') %>
    <h1 class='section-head'>Hey, I'm Jim.</h1>


    <div class='row'>
      <div class='col-10 mx-auto'>
        <h5>I've been a <b>Ruby on Rails</b> dev for <%= dev_time %>,
           and I've been writing and editing for <%= poet_time %>.
        </h5><br />
        <h5>And you're here because you want to know more about me.
        Excellent. Here's what I do. </h5>
      </div>
    </div>
  </center>
</div>

<div>
  <div class='apps-block'>
    <h5>If you want to see this as a more traditional resum√©, I'm happy to send you
      <%= link_to 'an email', resumes_write_email_path %> automagically.</h5>
  </div>
</div>

    <h3 class='center'>RAILS APPS AND WEBSITES</h3><br />
    <div class='container-fluid'>
      <div class='row'>
        <% order_no = 12 %>
        <% @apps.order(:app_order).each do |app| %>
          <div class='col bottom-pad'>
            <div class='card mx-auto hvr-grow-shadow order-<%= order_no %>'>
              <%= image_tag(app.img_url, alt: "#{app.name}", class: 'card-img-top img-fluid') %>
              <% order_no -= 1 %>
              <div class='card-body d-flex flex-column'>
                <h5 class='card-title'><%= app.name %></h5>
                <p class='card-text'><%= app.short_description %></p>
                <%= link_to 'show', app_path(id: app.id), class: 'btn btn-outline-secondary mt-auto' %>
              </div>
              <div class='card-footer text-muted'>
                <%= app.time_period %>
              </div>
              <% if session[:user_id] %>
                <%= link_to 'edit', edit_app_path(id: app.id), class: 'center' %><br />
                <%= link_to 'delete', app_path(id: app.id), method: :delete, class: 'center'  %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <h3 class='center'>WRITING AND EDITING</h3><br />
  <div class='container-fluid'>
    <div class='row'>
      <% order_no = 12 %>
      <% @jobs.order(:job_order).each do |job| %>
        <div class='col bottom-pad'>
          <div class='card mx-auto hvr-grow-shadow order-<%= order_no %>'>
            <%= image_tag(job.img_url, alt: "#{job.name}", class: 'card-img-top img-fluid') %>
            <% order_no -= 1 %>
            <div class='card-body d-flex flex-column'>
              <h5 class='card-title mt-auto'><%= job.name %></h5>
              <p class='card-text mt-auto'><%= job.short_description %></p>
              <%= link_to 'show', job_path(id: job.id), class: 'btn btn-outline-secondary mt-auto' %>
            </div>
            <div class='card-footer text-muted'>
              <%= job.time_period %>
            </div>
            <% if session[:user_id] %>
              <%= link_to 'edit', edit_job_path(id: job.id), class: 'center' %><br />
              <%= link_to 'delete', job_path(id: job.id), method: :delete, class: 'center'  %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
