<style type='text/css'>
  .app-parallax {
    background-image: url(<%= @app.img_url %>);
    opacity: 0.6;
    object-fit: cover;
    background-repeat: no-repeat;
    background-position: center;
    background-size: 100%;
    height: auto;
    background-attachment: fixed;
  }
</style>

<div class='jumbotron app-parallax'>
  <h1 class='display4'></h1>
  <p class='lead'></p>
</div>

<div class='container-fluid intro'>
  <div class='row'>
    <% if session[:user_id] %>
      <div class='col little-padding-top center'>
        <%= link_to 'edit', edit_app_path(id: @app) %>
      </div>
      <div class='col little-padding-top center'>
        <%= link_to 'add tech', new_app_tech_path(@app) %>
      </div>
    <% end %>
  </div>
  <div class='row'>
    <div class='col portrait center' id='bottom-wrapper'>
      <h4><%= @app.name %></h4>
      <h4><%= @app.short_description %></h4><br />
      <h4>Here's what you should know:</h4>
      <div class='row'>
        <div class='col-9 mx-auto'>
          <p><%= @app.description %></p><br />
        </div>
      </div>
      <h4>Where is it?</h4>
      <div class='col-9 mx-auto app-url'>
        <%= @app.url %>
      </div>
      <h4>Technologies:</h4>
      <% @app.teches.each do |tech| %>
          <%= tech.name %><br />
      <% end %>
    </div>
  </div>
</div>
