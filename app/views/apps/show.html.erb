<div class='jumbotron center white' style="background-image: url(<%= @app.img_url %>);
                                     object-fit: cover;
                                     background-repeat: no-repeat;
                                     background-position: center;
                                     background-size: 100%;
                                     height: 100%">
  <h2 class='display4'><%= @app.name %></h2>
  <p class='lead'><%= @app.short_description %></p>
  <hr class='my-4' />
</div>

<div class='container-fluid intro'>
  <div class='row'>
    <% if session[:user_id] %>
      <div class='col little-padding-top center'>
        <%= link_to 'edit', app_path(id: @app) %>
      </div>
    <% end %>
  </div>
  <div class='row'>
    <div class='col portrait center'>
      <p><%= @app.description %></p>
    </div>
  </div>
</div>
